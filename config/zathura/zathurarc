# See: <http://jhshi.me/2016/03/09/zathura-pdf-viewer-for-vim-lovers/index.html>
# zoom and scroll step size
# set zoom-step 20
# set scroll-step 80

# enable incremental search
set selection-clipboard clipboard


# See <https://github.com/LukeSmithxyz/voidrice/blob/archi3/.config/zathura/zathurarc>
map <C-u> scroll half-up
map <C-d> scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# settings
set zoom-step 20
set n-completion-items 20
set incremental-search true

# copy to clipboard
set selection-clipboard clipboard

# appearance
set statusbar-bg "#1d282c"
# default; padding when statsubar opend (:something)
set statusbar-v-padding 2
set statusbar-h-padding 8
# blank space between pages
set page-padding 2
# default
set adjust-open best-fit
set show-scrollbars false
# default; on abort (<esc>) clear higlight (like :nohl)
set abort-clear-search true

# don't make window title fullpath
set window-title-basename true
# don't show fullpath in status bar
# set statusbar-basename true

# set database sqlite


# WINDOW SIZE (default is 600x800 for HeightxWidth)
set window-height 1025
set window-width 1145
